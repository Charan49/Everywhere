                            )
    }

    function getLinkedServices(data, index, headers)
    {
        var services = "";
        $.ajax({
            url: "http://web-test.everywhere.live:8081/api/v1/service_membership/" + data[index].guid + "/",
            type: "GET",
            crossDomain: true,
            data: {},
