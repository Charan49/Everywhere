    function fillData(uid) {
      
        var token = sessionStorage.getItem('loginToken');
        var headers = {};
        if (token) {
            headers.Authorization = 'Bearer ' + token;
        }
        $.ajax({
            url: "http://web-test.everywhere.live:8081/api/v1/users/" + uid,
            type: "GET",
            crossDomain: true,
            data: {},
            dataType: "json",
            headers: headers,
            async: false,
            contentType: "application/json; charset=utf-8",
            
            success: function (data) {               
               
                $("#auName").val(data[0].firstName);
                $("#auEmail").val(data[0].email);
                $("#auLast").val(data[0].lastName);
                $("#hideId").val(data[0].id);

                if (data[0].accountState != 21) {
                    $('#resetId').prop("disabled", true);
                }
                else {
                    $('#resetId').prop("disabled", false);
                }

                $.ajax({
                    url: "http://web-test.everywhere.live:8081/api/v1/service_membership/" + data[0].guid + "/",
                    type: "GET",
                    crossDomain: true,
                    data: {},
                    dataType: "json",
                    headers: headers,
                    async: false,
                    contentType: "application/json; charset=utf-8",
                    success: function (sdata) {
                        
                        for (i = 0; i < sdata.length; i++) {
                            $('#UserLinkList').append(
                                '<input type="text" class="form-control" value="' + sdata[i].name.toLowerCase() + '" readonly >'
                           // $("#" + data[i].name.toLowerCase() + "link").val(data[i].name)
                            );
                        }
                        
                                                                
                    }
             , error: function (xhr, status, error) {
                 var err = eval("(" + xhr.responseText + ")");
                 console.log(err.Message);
             }
                }
            )
            }
        });
    }


    function updateEnable(uid) {        
                
        var text = $("#" + uid).find('strong').text();
        var enable = false;
        var get = "";

        if (text != "Enabled") {
            $("#" + uid).find('strong').text("Enabled");
            get = $("#" + uid).find('strong').text();
            enable = false;
        }
        else {
            $("#" + uid).find('strong').text("Disabled");
            get = $("#" + uid).find('strong').text();
            enable = true;
        }

        var token = sessionStorage.getItem('loginToken');
        var headers = {};
        if (token) {
            headers.Authorization = 'Bearer ' + token;
        }

        alert("User is successfully " + get);

        $.ajax({
            url: "http://web-test.everywhere.live:8081/api/v1/users/disable",
            type: 'POST',
            dataType: 'json',
            headers: headers,
            data: { 'id': uid, 'disable': enable, 'notify': 'Yes' },
            async: false,
            success: function (data) {                
                console.log(data);
            },
            error: function (xhr, status, error) {
                var err = eval("(" + xhr.responseText + ")");
                console.log(err.Message);               
            }
        });
    }    

