@{
    ViewBag.Title = "Confirm Email";
}

<header>
    <nav class="navbar navbar-main navbar-fixed-top" role="navigation" data-spy="affix" data-offset-top="60" data-offset-bottom="200">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse-main">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar top-bar"></span>
                    <span class="icon-bar middle-bar"></span>
                    <span class="icon-bar bottom-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><img src="~/images/everywhere_logo.png"> <span class="sr-only"> Everywhere </span></a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-collapse-main">
                <ul class="nav navbar-nav navbar-center">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">How it Works</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>

                <div class="navbar-right">
                    <p class="navbar-text">Don't have an Account?</p> <button type="button" class="btn navbar-btn" onclick="@("window.location.href='" + @Url.Action("Register", "Account") + "'" window.location.href='" + @Url.Action("Register", "Account") + "' ");">Get Started</button>
                </div>
            </div><!-- /.navbar-collapse -->
        </div>
    </nav>
</header>
<section class="bg-photo bg-photo-3">
    <div class="bg-opac-dark page-content">
        <div class="container">
            <div class="row">

                <div class="col-sm-10 col-md-8 col-sm-offset-1 col-md-offset-2">

                    <div class="well well-lg well-white row">
                        @using (Html.BeginForm("ConfirmEmail", "Account", FormMethod.Post, new { role = "form", @class = "col-sm-10 col-sm-offset-1 form-group-lg", id = "rForm", style = "height:400px;" }))
                        {
                            @Html.AntiForgeryToken()
                            <hgroup class="title">
                                <h1>@ViewBag.Title.</h1>
                            </hgroup>
                            <div>
                                <p>
                                    User registration is completed Successfully! Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                                </p>
                            </div>


                        }

                    </div>
                    <div class="navbar visible-xs text-center">
                        <p class="navbar-text">Don't have an Account?</p> <button type="button" class="btn navbar-btn btn-lg">Get Started</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
