    function getMembershipServices() {
        
        var token = localStorage.getItem('loginToken');
        var headers = {};
        if (token) {
            headers.Authorization = 'Bearer ' + token;
        }
        $.ajax({
            url: "https://ws.everywhere.live/api/v1/service_membership/",
            type: "GET",
            crossDomain: true,
            data: {},
            dataType: "json",
            headers: headers,
            async: false,
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                obj = data;
                    for (i = 0; i < data.length; i++) {
                        //addServiceRow(data[i].name);
                        addLinkedAccount(data[i].name);
                        accessToken = data[i].AccessToken;
                }
                return false;
            },
            error: function (jqXhr, textStatus, errorThrown) {
                
                alert(jqXhr.statusText);
            }
        });
        //});
    }

    function Logout()
    {
        var token = localStorage.getItem('loginToken');
        var headers = {};
        if (token) {
            headers.Authorization = 'Bearer ' + token;
        }
        $.ajax({
            url: "https://ws.everywhere.live/api/v1/signout/",
            type: "GET",
            crossDomain: true,
            data: {},
            dataType: "json",
            headers: headers,
            async: false,
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                var url = '@Url.Action("Login", "Account")';
                window.location.href = url;
            },
            error: function (jqXhr, textStatus, errorThrown) {
                var url = '@Url.Action("Login", "Account")';
                window.location.href = url;
            }
        });
    }

    function removeUserServices(name) {

        
        fbObj = $.grep(obj, function (e) { return e.name == 'Facebook'; });
        var token = localStorage.getItem('loginToken');
        var url = "https://ws.everywhere.live/api/v1/service_membership/RemoveServiceMembership?id=" + fbObj[0].ID;

        var headers = {};
        if (token) {
            headers.Authorization = 'Bearer ' + token;
        }
        $.ajax({
            url: url,
            type: "DELETE",
            crossDomain: true,
            data: {},
            dataType: "json",
            headers: headers,
            async: false,
            contentType: "application/json; charset=utf-8",
            error: function (jqXhr, textStatus, errorThrown) {
                
                $('#' + fbObj[0].name+'Linked').remove();

            },
            success: function (data) {

                
                $('#' + fbObj[0].name + 'Linked').remove();

            }
        });
        //});
    }

    function GetLivestreamURL() {
        var token = localStorage.getItem('loginToken');
        var headers = {};
        if (token) {
            headers.Authorization = 'Bearer ' + token;
        }
        $.ajax({
            url: "https://ws.everywhere.live/api/v1/livestream/start/",
            type: "GET",
            crossDomain: true,
            data: {},
            dataType: "json",
            headers: headers,
            async: false,
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $('#txtStreamLink').val(data[0].streamUrl);
            $('#btnGenLink').text('Copy Link');
            },
            error: function (jqXhr, textStatus, errorThrown) {
                $('#txtStreamLink').val(data[0].streamUrl);
            $('#btnGenLink').text('Copy Link');
            }
        });
    }

